{{> header }}
<style>
    #main-content {
        display: none;
    }
    #thot-profile-holder {
        font-family: sans-serif;
    }
    #thot-username {
        font-size: 3em;
        display: inline-block;
    }
    #thot-age {
        font-size: 2.5em;
        display: inline-block;
    }
    #thot-tagline {
        margin-top: 5px;
        margin-bottom: 5px;
    }
    #thot-profile-info {
        padding: 10px;
        padding-bottom: 110px;
    }
    #thot-profile-actions {
        bottom: 0;
        height: 100px;
        background: white;
        width: 100%;
        position: fixed;
        -webkit-box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.75);
-moz-box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.75);
box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.75);
    }
    #thot-profile-message {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        border: 1px solid gray;
        border-radius: 50%;
        padding: 20px;
        font-size: 2em;
    }
        #thot-profile-back {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(calc(-50% - 3em), -50%);
        border: 1px solid gray;
        border-radius: 50%;
        padding: 20px;
        font-size: 2em;
    }
        #thot-profile-like {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(calc(-50% + 3em), -50%);
        border: 1px solid gray;
        border-radius: 50%;
        padding: 20px;
        font-size: 2em;
    }
</style>
