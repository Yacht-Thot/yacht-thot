{{> header }}
<style>
    #main-content {
        display: none;
    }
    #thot-profile-holder {
        font-family: sans-serif;
    }
    #thot-username {
    font-size: 2em;
    position: absolute;
    bottom: 5px;
    left: 35px;
    color: white;
        background: rgba(0, 0, 0, .3);
    padding: 5px;
    border-radius: 10px;
    }
    #thot-age {
        font-size: 2.5em;
        display: inline-block;
    }
    #thot-tagline {
        margin-top: 5px;
        margin-bottom: 5px;
        font-style: italic;
        font-weight: 700;
    }
    #thot-profile-info {
        padding: 10px;
        padding-bottom: 160px;
    }
    #thot-profile-actions {
        bottom: 50px;
        height: 100px;
        background: white;
        width: 100%;
        position: fixed;
        -webkit-box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.75);
        -moz-box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.75);
        box-shadow: 0px 0px 5px 0px rgba(0,0,0,0.75);
    }
    #thot-profile-message {
        position: absolute;
        right: 5px;
        bottom: 5px;
        border: 1px solid gray;
        background: white;
        border-radius: 50%;
        padding: 10px;
        font-size: 2em;
        z-index: 2;
    }
        #thot-profile-back {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(calc(-50% - 2em), -50%);
        border: 1px solid gray;
        color: black;
        border-radius: 50%;
        padding: 20px;
        font-size: 2em;
    }
        #thot-profile-like {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(calc(-50% + 3em), -50%);
        border: 1px solid gray;
        border-radius: 50%;
        padding: 20px;
        font-size: 2em;
    }
    #thot-location {
        float: right;
    }
    #thot-bio {
        margin-bottom: 10px;
    }
</style>
<input type="file" id="profile-image-upload" style="display:none" accept="image/*"/> 
<div id="thot-profile-holder">
    <div id="profile-image-holder" class="thot-profile-img-holder">
      <div id="profile-image-counter">{{#ifeq profile_data.image_count 0}}0{{else}}1{{/ifeq}}/{{profile_data.image_count}}</div>
            {{#ifeq show_action_bar 1}}
        {{else}}
        <div id="profile-image-add"><i class="fa-solid fa-add"></i></div>
        <div id="profile-image-delete"><i class="fa-solid fa-trash"></i></div>
        {{/ifeq}}
        <div id="profile-image-arrow-right"><i class="fa-solid fa-arrow-right"></i></div>
        <div id="profile-image-arrow-left"><i class="fa-solid fa-arrow-left"></i></div>
        <div id="thot-username">{{profile_data.username}}</div>
        {{#ifeq show_action_bar 1}}
        <a style="color:black" href="/messages?uid={{profile_data.user_id}}">
        <div id="thot-profile-message">
            <i class="fa-solid fa-message"></i>
        </div>
        </a>
        {{/ifeq}}
    </div>
    <div id="thot-profile-info">
        <div id="thot-age">{{profile_data.age}}</div>
        <div id="thot-location"><i class="fa-solid fa-location-dot"></i> {{profile_data.location}}</div>
        
        <div id="thot-tagline">{{profile_data.tagline}}</div>
        
        <div id="thot-bio">{{profile_data.bio}}</div>
        <div id="thot-sign" class="profile-about-bubble">{{profile_data.a_sign}}</div>

        <div id="thot-eye-color" class="profile-about-bubble"><i class="fa-solid fa-eye"></i> Blue</div>
        <div id="thot-hair-color" class="profile-about-bubble"><i class="fa-solid fa-ruler"></i> Brown</div>
        <div id="thot-height" class="profile-about-bubble"><i class="fa-solid fa-up-down"></i> 6/2</div>
        <div id="thot-drinks" class="profile-about-bubble"><i class="fa-solid fa-martini-glass"></i> No</div>
        <div id="thot-pet" class="profile-about-bubble"><i class="fa-solid fa-dog"></i> Lizard</div>
        <div id="thot-food" class="profile-about-bubble"><i class="fa-solid fa-burger"></i> Pizza</div>
    </div>
    {{#ifeq show_action_bar 1}}
    <!--<div id="thot-profile-actions">
        <a style="color:black" href="/messages?uid={{profile_data.user_id}}">
        
        </a>
        <a href="/feed">
            <div id="thot-profile-back">
                <i class="fa-solid fa-arrow-left-long"></i>
            </div>
        </a>
        
        <div id="thot-profile-like" onclick="likeProfile({{profile_data.user_id}})">
            <i id="thot-profile-like-icon" class="fa-regular fa-heart"></i>
        </div>-->
    </div>
    {{else}}
    <a href='/onboarding'><div id="edit-profile-button"><i class="fa-solid fa-pencil"></i> Edit Profile</div></a>
    {{/ifeq}}
</div>
<script>
            var profile_data = "{{json profile_data}}"
            profile_data = profile_data.replace(/&quot;/g, '\"');
            console.log("PROFILE DATA:", profile_data)
            profile_data = JSON.parse(profile_data);

            var show_action_bar = "{{show_action_bar}}"
</script>
