<html>
    <head>
        <title>{{title}}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" type="image/png" href="/favicon.png">
        <link rel="stylesheet" href="/css/style.css">
        <script src="https://kit.fontawesome.com/618b8f88a5.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <div class="show-desktop-hider">
            <div class="centered">
                <img src="/img/yachtthot-black.png" width="500px"/>
                <h2>Please Visit us on a Mobile Browser to continue.</h2>
                <i style='font-size:3em' class="fa-solid fa-mobile-screen-button"></i>
            </div>
        </div>
        <div id="header">
            <a href="/">
                <img src="/img/yachtthot-black.png"/>
            </a>
            <div id="mobile-menu">
                <i class="fa-solid fa-bars"></i>
            </div>
            <div id="mobile-menu-content">
                {{#ifeq user_data -1 }}
                <a href="/">
                <div class="mobile-menu-item">
                Sign In
                </div>
                </a>
                {{else}}
                <a href="/feed">
                <div class="mobile-menu-item">
                Home
                </div>
                </a>
                <a href="/my-profile">
                <div class="mobile-menu-item">
                My Profile
                </div>
                </a>
                <a href="/messages">
                <div class="mobile-menu-item">
                Messages
                </div>
                </a>
                {{/ifeq}}
                <a href="/about">
                <div class="mobile-menu-item">
                About
                </div>
                </a>
                <a href="/support">
                <div class="mobile-menu-item">
                Support
                </div>
                </a>
                <a href="/faq">
                <div class="mobile-menu-item">
                FAQs
                </div>
                </a>
                <a href="/terms-of-service">
                <div class="mobile-menu-item">
                Terms of Service
                </div>
                </a>
                <a href="/privacy-policy">
                <div class="mobile-menu-item">
                Privacy Policy
                </div>
                </a>
                {{#ifeq user_data -1 }}
                {{else}}
                <a href="/logout">
                <div class="mobile-menu-item">
                Logout
                </div>
                </a>
                {{/ifeq}}
            </div>
            <div id="desktop-menu">
                <a href="/captain-feed">Captain's Feed</a>
                <a href="/captain">Captain's Profile</a>
                <a href="/thot-feed">Thot's Feed</a>
                <a href="/thot">Thot's Profile</a>
                <a href="/faq">FAQs</a>
                <a href="/about">About</a>
                <a href="/support">Support</a>
                
                <a href="/sign-in">Sign In</a>
            </div>
        </div>
        <div id="main-content">
            <video src="/hero2.mp4" muted autoplay loop></video>
        </div>